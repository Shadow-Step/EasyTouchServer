<Window x:Class="EasyTouchServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyTouchServer"
        mc:Ignorable="d"
        Title="MainWindow" Height="612.65" Width="219">
    <Grid>
        <Button Content="Start" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Width="89" Height="26" Click="StartCloseServer"/>
        <TextBox HorizontalAlignment="Left" Height="24" Margin="10,41,0,0" TextWrapping="Wrap" Text="IP&#xD;&#xA;" VerticalAlignment="Top" Width="89"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="104,41,0,0" TextWrapping="Wrap" Text="Port" VerticalAlignment="Top" Width="89"/>
        <Label Content="Offline" x:Name="status_field" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="183" Height="26"/>
        <Button Content="Close" HorizontalAlignment="Left" Margin="104,70,0,0" VerticalAlignment="Top" Width="89" RenderTransformOrigin="0.018,0.091" Height="26" Click="CloseServer"/>
        <ListBox x:Name="LogList" HorizontalAlignment="Left" Height="472" Margin="10,101,0,0" VerticalAlignment="Top" Width="191"/>

    </Grid>
</Window>
